<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161622"
    tools:context=".Activity.AcountActivity">


    <LinearLayout
        android:id="@+id/layoutsearch"
        android:layout_width="412dp"
        android:layout_height="80dp"
        android:background="#242633"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:background="@drawable/baseline_keyboard_backspace_24"
            android:id="@+id/ivback"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:padding="10dp"
            android:text="Tài khoản cá nhân"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/baseline_settings_24"
            android:layout_gravity="center"
            android:layout_marginRight="16dp"
            android:id="@+id/ivsetting"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/imfor"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:layout_below="@+id/layoutsearch">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/user"

            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tvUsernameAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="NameUser"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn đang sử dụng gói nghe nhạc miễn phí,"
            android:textColor="@color/white"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nâng cấp tài khoản đê trải nghiệm âm nhạc tốt hơn"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:paddingBottom="20dp"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/button"
            android:text="NÂNG CẤP TÀI KHOẢN"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imfor"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        android:paddingLeft="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:text="Cá nhân"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableStart="@drawable/ic_baseline_person_outline_24"
            android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
            android:drawablePadding="20dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:text="Thông tin cá nhân"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:id="@+id/tvInfo"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableStart="@drawable/baseline_lock_reset_24"
            android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
            android:drawablePadding="20dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp"
            android:text="Thay đổi mật khẩu"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:id="@+id/tvChagePass"/>

        <LinearLayout
            android:id="@+id/lineA"
            android:layout_width="375dp"
            android:layout_height="2dp"
            android:layout_gravity="left"
            android:background="#20202c"
            android:orientation="vertical"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/baseline_logout_24"
            android:drawablePadding="20dp"
            android:paddingTop="20dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp"
            android:text="Đăng xuất"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:id="@+id/tvDangxuat"/>



    </LinearLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#4D616161"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="0.2">

                <ImageView
                    android:id="@+id/ivHome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_home_btn" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addMore"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="0.2"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivAddMore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_add_more_btn" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/favourite"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivFavourite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/ic_favourite_btn" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/explore"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="0.2"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivExplore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_explore_btn" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/account"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="0.2"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_account_btn" />
            </LinearLayout>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</RelativeLayout>